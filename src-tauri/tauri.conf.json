{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "selene-launcher",
  "version": "0.1.0",
  "identifier": "world.selene.launcher",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Selene",
        "width": 1280,
        "height": 720
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJCODZEQUMzQzIxOUM5ODEKUldTQnlSbkN3OXFHSy9qcDZ5NTgwL0xKWDk4bzAyZWY1b2xuZEwzSVBTNmhPa1BkUlR1aUh3WmQK",
      "endpoints": [
        "https://github.com/SeleneWorlds/Selene-Launcher/releases/latest/download/latest.json"
      ]
    },
    "deep-link": {
      "desktop": {
        "schemes": ["selene"]
      }
    }
  }
}
